//
// FOOTER
// ******************************************************************

footer {
  background: purple;
  text-align: center;
  padding: 20px;
}

section {
  padding-top: 40px;
  padding-bottom: 40px;
}

.fa:before {
  transition: color .3s ease;
  color: rgba(light-purple, 1);
  font-size: 16px;
  margin-right: 6px;
  line-height: 1.25;
}


//
// Buttons
// ******************************************************************

.button,
button {
  transition: all .3s ease;
  background: transparent;
  border: none;
  border-radius: 1000px;
  box-shadow: 0 0 0 1px light-grey;
  color: light-grey;
  cursor: pointer;
  font-size: 1em;
  font-weight: 100;
  padding: 10px 15px;
  &:hover {
    background: light-grey;
    color: purple;
  }
}

body.message {
  overflow: hidden;
  pointer-events: none;
  #message {
    pointer-events: auto;
    opacity: 1;
  }
}

#message {
  transition: opacity .6s ease;
  pointer-events: none;
  position: fixed;
  opacity: 0;
  top: 60px;
  left: 15px;
  right: 15px;
  color: black;
  min-height: 140px;
  z-index: 10;

  p {
    color: black;
    padding: 15px;
    position: relative;
    z-index: 2;
  }

  &:before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
    background: desaturate(yellow, .25);
  }

  &:after {
    content: '';
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(purple, .86);
    z-index: 0;
  }

  .close {
    border-radius: 1000px;
    position: absolute;
    top: 5px;
    right: 5px;
    background: red;
    padding: 10px 5px;
    color: yellow;
    box-shadow: 0 0 0 1px red;
    z-index: 6;
    cursor: pointer;
  }
}

.right {
  float: right;
  border-radius: 1000px;
}